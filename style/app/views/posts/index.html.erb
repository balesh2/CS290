<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <h1>Your Posts</h1>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-8">
      <div class="panel-group" id="accordion">
        <% if @posts.count == 0 %>
          You have not posted anything.
        <% else %>
          <%= render "index_posts" %>
        <% end %>
      </div>
    </div>
    <div class="col-xs-4">
      <div class="panel panel-default">
        <div class="panel panel-heading">
          Add New
        </div>
        <div class="panel panel-body">
          <%= link_to "Add a New Post", new_post_path %>
        </div>
      </div>
    </div>
  </div>
</div>
